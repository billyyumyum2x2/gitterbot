{
    "rules": {
        "indent": [
            2,
            4
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "quotes": [0, "double"]
     },
    "env": {
        "es6": true,
        "node": true
    },

    "globals": {
        "describe": false,
        "it": false,
        "__dirname": false
    },

    "ecmaFeatures": {
        "string-templates": true
    }
}